<Window
    x:Class="catppuccinifier.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:catppuccinifier"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">



    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Orientation="Vertical" 
            VerticalAlignment="Stretch"
            Width="250" 
            Background="#11111b"
            Padding="8"
            >
            
            <TextBlock FontSize="20">Properties</TextBlock>

            <StackPanel Height="16"></StackPanel>

            <TextBlock x:ConnectionId='27' x:Name="NoiseLevelLabel" FontSize="14">Noise Level - 0</TextBlock>

            <Slider x:ConnectionId='28'
                x:Name="NoiseLevelSlider"
                Minimum="0" 
                Maximum="4" 
                TickFrequency="1" 
                TickPlacement="None"
                                                            
                Value="4"
            ></Slider>

            <StackPanel Height="16"></StackPanel>

            <Button x:ConnectionId='29'
                    x:Name="SelectImageButton"
                    CornerRadius="14"
                    HorizontalAlignment="Stretch"
                    Background="#313244"
                                                   
                >
                Select Image
            </Button>

            <StackPanel Height="16"></StackPanel>

            <Image x:ConnectionId='30'
                    x:Name="SelectedImage"
                    HorizontalAlignment="Stretch"
                    MaxHeight="250"
                ></Image>

            <StackPanel Height="16"></StackPanel>

            <Button x:ConnectionId='31'
                x:Name="GenerateImagesButton"
                CornerRadius="14"
                HorizontalAlignment="Stretch"
                Background="#313244"
                                                  
                >
                Generate Images
            </Button>

        </StackPanel>

        <ScrollViewer
            Grid.Row="0"
            Grid.Column="1"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            >

            <StackPanel
                HorizontalAlignment="Stretch"
                Orientation="Horizontal"
                Background="#1e1e2e"
                Padding="8"
                >

                <StackPanel
                    VerticalAlignment="Stretch"
                    Width="250"
                    >

                    <StackPanel x:ConnectionId='17'
                        x:Name="LattePanel"
                        Orientation="Vertical"
                        Background="#11111b"
                        Padding="16"
                        CornerRadius="14"
                        HorizontalAlignment="Stretch"
                        >

                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button x:ConnectionId='25'
                                Grid.Row="0"
                                Grid.Column="0"
                                x:Name="SaveLatteButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                             
                            >
                                Save Latte
                            </Button>

                            <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="8">
                            </StackPanel>

                            <Button x:ConnectionId='26' 
                                Grid.Row="0"
                                Grid.Column="2"
                                x:Name="PreviewLatteButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                                
                                >
                                Preview
                            </Button>
                        </Grid>

                        <StackPanel Height="16"></StackPanel>

                        <ProgressBar x:ConnectionId='23' x:Name="LatteProgressBar" IsIndeterminate="True"/>

                        <Image x:ConnectionId='24' 
                            x:Name="GeneratedLatteImage"
                            HorizontalAlignment="Stretch"
                            ></Image>
                        
                    </StackPanel>

                    <StackPanel Height="8"></StackPanel>

                    <StackPanel x:ConnectionId='18'
                    x:Name="FrappePanel"
                    Orientation="Vertical"
                    Background="#11111b"
                    Padding="16"
                    CornerRadius="14"
                    HorizontalAlignment="Stretch"
                    >

                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='21'
                                Grid.Row="0"
                                Grid.Column="0"
                                x:Name="SaveFrappeButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                              
                                
                            >
                                Save Frappe
                            </Button>

                            <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="8">
                            </StackPanel>

                            <Button x:ConnectionId='22' 
                                Grid.Row="0"
                                Grid.Column="2"
                                x:Name="PreviewFrappeButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                                 
                                >
                                Preview
                            </Button>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">

                        </StackPanel>

                        <StackPanel Height="16"></StackPanel>

                        <ProgressBar x:ConnectionId='19' x:Name="FrappeProgressBar" IsIndeterminate="True"/>

                        <Image x:ConnectionId='20' 
                        x:Name="GeneratedFrappeImage"
                        HorizontalAlignment="Stretch"
                        ></Image>
                    </StackPanel>

                </StackPanel>

                <StackPanel Width="8"></StackPanel>

                <StackPanel
                VerticalAlignment="Stretch"
                Width="250"
                >

                    <StackPanel x:ConnectionId='7'
                    x:Name="MacchiatoPanel"
                    Orientation="Vertical"
                    Background="#11111b"
                    Padding="16"
                    CornerRadius="14"
                    HorizontalAlignment="Stretch"
                    >

                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='15'
                                Grid.Row="0"
                                Grid.Column="0"
                                x:Name="SaveMacchiatoButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                                 
                            >
                                Save Macchiato
                            </Button>

                            <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="8">
                            </StackPanel>

                            <Button x:ConnectionId='16' 
                                Grid.Row="0"
                                Grid.Column="2"
                                x:Name="PreviewMacchiatoButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                                    
                            >
                                Preview
                            </Button>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">

                        </StackPanel>

                        <StackPanel Height="16"></StackPanel>

                        <ProgressBar x:ConnectionId='13' x:Name="MacchiatoProgressBar" IsIndeterminate="True"/>

                        <Image x:ConnectionId='14' 
                        x:Name="GeneratedMacchiatoImage"
                        HorizontalAlignment="Stretch"
                        ></Image>
                    </StackPanel>

                    <StackPanel Height="8"></StackPanel>

                    <StackPanel x:ConnectionId='8'
                    x:Name="MochaPanel"
                    Orientation="Vertical"
                    Background="#11111b"
                    Padding="16"
                    CornerRadius="14"
                    HorizontalAlignment="Stretch"
                    >

                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='11'
                                Grid.Row="0"
                                Grid.Column="0"
                                x:Name="SaveMochaButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                             
                            >
                                Save Mocha
                            </Button>

                            <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="8">
                            </StackPanel>

                            <Button x:ConnectionId='12' 
                                Grid.Row="0"
                                Grid.Column="2"
                                x:Name="PreviewMochaButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                                
                                >
                                Preview
                            </Button>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">

                        </StackPanel>

                        <StackPanel Height="16"></StackPanel>

                        <ProgressBar x:ConnectionId='9' x:Name="MochaProgressBar" IsIndeterminate="True"/>

                        <Image x:ConnectionId='10' 
                        x:Name="GeneratedMochaImage"
                        HorizontalAlignment="Stretch"
                        ></Image>
                    </StackPanel>

                </StackPanel>

                <StackPanel Width="8"></StackPanel>

                <StackPanel
                VerticalAlignment="Stretch"
                Width="250"
                >

                    <StackPanel x:ConnectionId='2'
                    x:Name="OledPanel"
                    Orientation="Vertical"
                    Background="#11111b"
                    Padding="16"
                    CornerRadius="14"
                    HorizontalAlignment="Stretch"
                    >

                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='5'
                                Grid.Row="0"
                                Grid.Column="0"
                                x:Name="SaveOledButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                            
                            >
                                Save Oled
                            </Button>

                            <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="8">
                            </StackPanel>

                            <Button x:ConnectionId='6' 
                                Grid.Row="0"
                                Grid.Column="2"
                                x:Name="PreviewOledButton"
                                Background="#313244" 
                                CornerRadius="14"
                                HorizontalAlignment="Stretch"
                                                               
                                >
                                Preview
                            </Button>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">

                        </StackPanel>

                        <StackPanel Height="16"></StackPanel>

                        <ProgressBar x:ConnectionId='3' x:Name="OledProgressBar" IsIndeterminate="True"/>

                        <Image x:ConnectionId='4' 
                        x:Name="GeneratedOledImage"
                        HorizontalAlignment="Stretch"
                        ></Image>
                    </StackPanel>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Window>

